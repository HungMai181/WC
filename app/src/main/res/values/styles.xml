<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="TitleScreenName" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_marginBottom">@dimen/main_menu_button_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">@dimen/main_title_font_size</item>
    </style>

    <style name="MainMenuButton" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/main_menu_button_padding</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">@dimen/main_menu_button_width</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:fontFamily">serif</item>
    </style>
</resources>
